{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["{projectRoot}/dist"],
      "cache": true
    },
    "dev": {
      "dependsOn": ["^dev", "email"],
      "continuous": true
    },
    "email": {
      "continuous": true
    }
  },
  "namedInputs": {
    "sharedGlobals": ["{workspaceRoot}/.github/workflows/ci.yml"],
    "default": ["sharedGlobals"]
  },
  "nxCloudId": "691fe786e56af5ab30ac4788",
  "plugins": [
    {
      "plugin": "@nx/js/typescript",
      "options": {
        "typecheck": {
          "targetName": "typecheck"
        },
        "build": {
          "targetName": "build",
          "configName": "tsconfig.lib.json",
          "buildDepsName": "build-deps",
          "watchDepsName": "watch-deps"
        }
      }
    }
  ],
  "release": {
    "version": {
      "preVersionCommand": "nx registry:build packages/shadcn",
      "conventionalCommits": false
    },
    "changelog": {
      "projectChangelogs": false,
      "workspaceChangelog": {
        "createRelease": "github",
        "renderOptions": {
          "excludeAuthors": ["autofix-ci[bot]", "autofix.ci"]
        }
      }
    },
    "conventionalCommits": {
      "types": {
        "__INVALID__": {
          "semverBump": "patch",
          "changelog": {
            "title": "Changes"
          }
        }
      }
    }
  }
}
